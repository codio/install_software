[Service]
User = codio
Group = codio
Type=forking
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/tmp/codio.auth"
Environment="XDG_RUNTIME_DIR=/tmp/runtime-codio"
ExecStart = /usr/bin/vncserver :0  -verbose -SecurityTypes None -auth /tmp/codio.auth -xstartup /usr/bin/openbox
ExecStop = /usr/bin/vncserver -kill :*
ExecStartPre=-/usr/bin/vncserver -kill :* 
Restart=always
RestartSec=5s

[Unit]
Description = Codio xdesktop

[Install]
WantedBy = multi-user.target
